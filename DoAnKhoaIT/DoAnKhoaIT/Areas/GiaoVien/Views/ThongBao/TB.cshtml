@model PagedList.IPagedList<Model.EF.Baidang>
@using PagedList.Mvc;
@{
    ViewBag.Title = "TB";
    Layout = "~/Areas/GiaoVien/Views/Shared/_LayoutGV.cshtml";
}

<body>
    <div id="content">

        <div class="container">

            <div class="col-sm-12">
                <ul class="breadcrumb">

                    <li>
                        @Html.ActionLink("Trang chủ", "IndexGV", "Home")
                    </li>
                    <li>Thông báo</li>

                </ul>
            </div>
            <div class="col-sm-12" id="blog-listing">
                @foreach (var item in Model)
                {
                    <div class="post">
                        @Html.ActionLink(item.Tieude, "TB1", "ThongBao", new { mabaidang = item.Mabaidang }, new { style = "color: Black; font-size:22px; font-family:Arial" })
                        <p>
                            @Html.Raw(item.Noidung.Substring(0, Math.Min(item.Noidung.Length, 550)))....
                        </p>
                        <p class="read-more btn btn-primary" style="background-color:#337ab7;"> @Html.ActionLink("Xem thêm", "TB1", "ThongBao", new { mabaidang=item.Mabaidang}, new { style = "color: White" }) </p>
                    </div>
                }




                @*<p class="read-more"> <a href="" class="btn btn-primary"> Xem thêm</a> </p>*@


                <div class="col-lg-12">
                    @Html.PagedListPager(Model, page => Url.Action("TB", new { page }))
                </div>


            </div>

        </div>  @*#content*@
    </div>
</body>
<style>
    .post {
        background: #f5f5f5;
        margin: 0 0 30px;
        border: solid 1px #e6e6e6;
        box-sizing: border-box;
        padding: 20px;
    }
</style>

