@model PagedList.IPagedList<Model.ViewModel.BaidangModel>
@using PagedList.Mvc;
    @{
        ViewBag.Title = "NCKH";
        Layout = "~/Areas/GiaoVien/Views/Shared/_LayoutGV.cshtml";
    }
    <head>
        <link href="/Assets/Guest/css/khungbentrai.css" rel="stylesheet" id="theme-stylesheet">
    </head>
    <body>
        <div id="content">

            <div class="container">

                <div class="col-sm-12">
                    <ul class="breadcrumb">

                        <li>
                            @Html.ActionLink("Trang chủ", "Index", "Home")
                        </li>
                        <li>Nghiên Cứu</li>
                    </ul>
                </div>

                <!-- *** LEFT COLUMN ***
                _________________________________________________________ -->

                <div class="col-sm-9" id="blog-listing">
                    @foreach (var item in Model)
                    {
                        <div class="post">
                            <h2>
                                @Html.ActionLink(item.TieuDe,"CT_NCKH","NghienCuuKH", new { mannckh = item.MaNCKH, tenloai = item.TenLoaiNCKH}, null)
                            </h2>
                            <p>@Html.Raw(item.Noidung.Substring(0, Math.Min(item.Noidung.Length, 550)))....</p>
                            <p class="read-more btn btn-primary"> @Html.ActionLink("Xem thêm", "CT_NCKH", "NghienCuuKH", new { mannckh = item.MaNCKH, tenloai = item.TenLoaiNCKH }, new { style = "color: White" }) </p>
                        </div>
                    }



                    <div class="col-lg-12">
                        @Html.PagedListPager(Model, page => Url.Action("NCKH", new { page }))
                    </div>
                </div>
                <!-- /.col-md-9 -->
                <!-- *** LEFT COLUMN END *** -->
                <div class="col-md-3">
                    <!-- *** BLOG MENU ***
                    _________________________________________________________ -->
                    <div class="panel panel-default sidebar-menu">

                        <div class="panel-heading">
                            <h3 class="panel-title">Đào tạo</h3>
                        </div>

                        <div class="panel-body">

                            <ul class="nav nav-pills nav-stacked">
                                <li> @Html.ActionLink("Sự kiện", "NCKH", "NghienCuuKH", new { maloaidt = "TS", tenloai = "Sự kiện" }, null)</li>
                                <li> @Html.ActionLink("Bài báo", "NCKH", "NghienCuuKH", new { maloaidt = "TiS", tenloai = "Sự kiện" }, null)</li>
                            </ul>
                        </div>

                    </div>
                    <!-- /.col-md-3 -->
                    <!-- *** BLOG MENU END *** -->
                    @*<div class="banner">
                            <img src="../../../cntt_media/khoa-cntt.jpg" alt="Khoa cntt" class="img-responsive">

                        </div>*@
                </div>


            </div>
            <!-- /.container -->
            <!-- /#content -->
        </div>

    </body>

