@model  Model.ViewModel.HomeModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/VanPhongKhoa/Views/Shared/_Layout.cshtml";
}

@section jsFooter{
    <script src="~/Assets/VPK/Home.js"></script>
    
}


<div class="container-fluid">
    <div class="row bg-title">
        <!-- .page title -->
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Trang chủ</h4>
        </div>
        <!-- /.page title -->
        <!-- .breadcrumb -->
        <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
            <button class="right-side-toggle waves-effect waves-light btn-info btn-circle pull-right m-l-20"><i class="ti-settings text-white"></i></button>
            <ol class="breadcrumb">
                <li><a href="#">Trang chủ</a></li>

            </ol>
        </div>
        <!-- /.breadcrumb -->
    </div>

    <!-- .row -->
    <div class="row">
        <div class="col-sm-12">
            <div class="white-box">
                <div class="row row-in">
                    <div class="col-lg-4 col-sm-12 row-in-br">
                        <ul class="col-in">
                            <li>
                                <span class="circle circle-md bg-danger"><i class="ti-ruler-alt"></i></span>
                            </li>
                            <li class="col-last">
                                <h3 class="counter text-right m-t-15">@ViewBag.giaovien</h3>
                            </li>
                            <li class="col-middle">
                                <h4>Số lượng giáo viên</h4>
                                <div class="progress">
                                    <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                                        <span class="sr-only">40% Complete </span>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-4 col-sm-12 row-in-br  b-r-none">
                        <ul class="col-in">
                            <li>
                                <span class="circle circle-md bg-info"><i class="ti-envelope"></i></span>
                            </li>
                            <li class="col-last">
                                <h3 class="counter text-right m-t-15">@ViewBag.monhoc</h3>
                            </li>
                            <li class="col-middle">
                                <h4>Số lượng môn học</h4>
                                <div class="progress">
                                    <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                                        <span class="sr-only">40% Complete</span>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-4 col-sm-12  b-0">
                        <ul class="col-in">
                            <li>
                                <span class="circle circle-md bg-warning"><i class="ti-user"></i></span>
                            </li>
                            <li class="col-last">
                                <h3 class="counter text-right m-t-15">1083</h3>
                            </li>
                            <li class="col-middle">
                                <h4>Số lượng sinh viên</h4>
                                <div class="progress">
                                    <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                                        <span class="sr-only">40% Complete</span>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- calendar widgets -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-lg-4 col-md-12 col-sm-12">
            <div class="panel">
                <div class="p-20">
                    <div class="row">
                        <div class="col-xs-6">
                            <h5 class="m-b-0">Sự kiện</h5>
                            <h3 class="m-t-0 font-medium">SỰ KIỆN KHOA HỌC</h3>
                        </div>
                        <div class="col-xs-6">
                            <a href="javascript:void(0)" class="pull-right btn btn-rounded btn-danger m-t-15" data-toggle="modal" data-target="#myModal">Xem thêm</a>
                        </div>
                    </div>
                </div>
                <!-- .modal for add task -->
                <div class="modal fade" id="khoahocmodal" tabindex="-1" role="dialog" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <h4 class="modal-title">Sự kiện khoa học</h4>
                            </div>
                            <div class="modal-body">
                                <div style="text-align:center;border-bottom:solid #f2f2f2 1px" class="p-b-10 m-b-10">
                                    <h3 style="display:inline" id="tieudekhoahoc">  </h3>
                                    <p style="display:inline;font-size:12px" id="ngaykhoahoc"></p>
                                </div>
                                <div class="m-l-10 m-r-10">

                                    <p><strong>Nội dung:</strong></p>
                                    <span id="noidungkhoahoc">

                                    </span>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                            </div>
                        </div>
                        <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                </div>
                <!-- /.modal -->
                <div class="panel-footer" style="max-height:569px;overflow:auto">
                    <ul class="list-group">
                        @foreach (var item in Model.listchitietnghiencuukhoahoc)
                        {
                            <li class="list-group-item nghiencuu" data-mactnckh="@item.MaCTNCKH">

                                @{
                                    DateTime? a = item.NgaySK;
                                    DateTime b = DateTime.Now;
                                    TimeSpan? res = (a - b);
                                }

                                @if (@res.Value.Days < 0)
                                {
                                    <label>
                                        <span>@item.Tieude</span> <span class="label label-danger label-rounded">
                                            Đã qua
                                        </span>
                                    </label>
                                }
                                else
                                {
                                    if (res.Value.Days == 0)
                                    {
                                        <label>
                                            <span>@item.Tieude</span> <span class="label label-warning label-rounded">
                                                Hôm nay
                                            </span>
                                        </label>
                                    }
                                    else
                                    {
                                        <label>
                                            <span>@item.Tieude</span> <span class="label label-info label-rounded">
                                                @res.Value.Days ngày
                                            </span>
                                        </label>
                                    }

                                }

                                <div class="item-date"> @item.NgaySK.Value.ToShortDateString()</div>
                            </li>
                        }

                        <li class="list-group-item">
                            <label><span>Thanhetn</span><span class="label label-warning label-rounded"> 2 ngày</span></label>
                            <div class="item-date"> 12/11/2018</div>
                        </li>
                        <li class="list-group-item">
                            <label><span>Thanhetn</span><span class="label label-warning label-rounded"> 2 ngày</span></label>
                            <div class="item-date"> 12/11/2018</div>
                        </li>
                        <li class="list-group-item">
                            <label><span>Thanhetn</span><span class="label label-warning label-rounded"> 2 ngày</span></label>
                            <div class="item-date"> 12/11/2018</div>
                        </li>
                        <li class="list-group-item">
                            <label><span>Thanhetn</span><span class="label label-warning label-rounded"> 2 ngày</span></label>
                            <div class="item-date"> 12/11/2018</div>
                        </li>

                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-12 col-lg-8 col-sm-12 m-b-30">
            <div class="panel m-b-0">
                <div class="p-20">
                    <div class="row">
                        <div class="col-xs-6">
                            <h5 class="m-b-0">Lịch</h5>
                            <h3 class="m-t-0 font-medium">LỊCH CÔNG TÁC</h3>
                        </div>

                    </div>
                </div>



            </div>
            <div id="calendar"></div>
        </div>
        <!-- BEGIN MODAL -->
        <div class="modal fade none-border" id="lichgvmodal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title"><strong>Lịch công tác</strong></h4>
                    </div>
                    <div class="modal-body">
                        <div style="text-align:center;border-bottom:solid #f2f2f2 1px" class="p-b-10 m-b-10">
                            <h3 style="display:inline" id="tieude"> Họp công tác giáo viên </h3>
                            <p style="display:inline;font-size:12px" id="ngayct">27/10/2018</p>
                        </div>
                        <div class="m-l-10 m-r-10">
                            <p id="diadiem" style="border-bottom:solid #f2f2f2 1px"></p>
                            <p id="chutri" style="border-bottom:solid #f2f2f2 1px"></p>
                            <p style="border-bottom:solid #f2f2f2 1px"><strong>Nội dung:</strong></p>
                            <span id="noidung">

                            </span>
                            <p style="border-bottom:solid #f2f2f2 1px"><strong>Thành phần:</strong></p>
                            <span id="thanhphan">

                            </span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-white waves-effect" data-dismiss="modal">Đóng</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal Add Category -->
        <div class="modal fade none-border" id="add-new-event">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title"><strong>Add</strong> a category</h4>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="control-label">Category Name</label>
                                    <input class="form-control form-white" placeholder="Enter name" type="text" name="category-name" />
                                </div>
                                <div class="col-md-6">
                                    <label class="control-label">Choose Category Color</label>
                                    <select class="form-control form-white" data-placeholder="Choose a color..." name="category-color">
                                        <option value="success">Success</option>
                                        <option value="danger">Danger</option>
                                        <option value="info">Info</option>
                                        <option value="primary">Primary</option>
                                        <option value="warning">Warning</option>
                                        <option value="inverse">Inverse</option>
                                    </select>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger waves-effect waves-light save-category" data-dismiss="modal">Save</button>
                        <button type="button" class="btn btn-white waves-effect" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- END MODAL -->
    </div>
