@model Model.ViewModel.FormMail
@using PagedList.Mvc
@{
    ViewBag.Title = "ThuNhap";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}
@section jsFooter{
    <script>
    $("#btnxoathu").click(function () {
            var list = [];
            var i = 0;
            $('.chuyenthu').each(function () {

                if ($(this).closest('tr').find("input").is(":checked")) {
                    list[i] = $(this).data('id');
                    ++i;
                };
            });
            if (list.length > 0) {
                list = JSON.stringify(list);
                list = list.replace("[", "");
                list = list.replace("]", "");
                $.ajax({
                    url: '/Admin/Mail/chuyenmail1',
                    type: 'POST',
                    dataType: 'json',
                    data: { list: list },
                    success: function (e) {
                        alert("Xóa thành công");
                        location.reload();
                    }
                });
            } else {
                alert("Bạn chưa chọn thư!");
            }
        });
        $("#tatca").on("click",function () {

            if ($(this).is(":checked")) {
                $('.chuyenthu').each(function () {
                    $(this).closest('tr').find("input").prop('checked', true);
                });
            }else{
                $('.chuyenthu').each(function () {
                    $(this).closest('tr').find("input").prop('checked', false);
                });
            };
        })
    </script>
    }
