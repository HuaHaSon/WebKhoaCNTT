                                                    int i = 0;
                                                }

                                                @foreach (var item in Model.listquyen)
                                                {
                                                    var ten = "quyen" + item.Maquyen;

                                                    <div class="m-b-15 col-lg-6 checkbox checkbox-success checkbox-circle">
                                                        @Html.TextBoxFor(model => model.quyen[i], "", new { @type = "checkbox", @class = "quyenadd", @Value = item.Maquyen, @id = ten })

                                                        <label for=@ten> @item.Tenquyen </label>
