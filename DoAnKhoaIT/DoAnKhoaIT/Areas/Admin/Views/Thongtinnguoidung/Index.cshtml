                                                            @*<inpuf type="text" class="form-control" id="datepicker-autoclose" placeholder="mm/dd/yyyy" required />*@
                                                            <span class="input-group-addon"><i class="icon-calender"></i></span>
                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-12"> Số điện thoại</label>
                                                    <div class="col-md-12">
                                                        @Html.TextBoxFor(model => model.thongtinnguoidung.Sodienthoai, "", new { @type = "text", @placeholder = "", @data_mask = "+84 99 999 9999", @class = "form-control sdttaikhoanedit", @required = "required" })
                                                        @*<input type="text" placeholder="" data-mask="+84 99 999 9999" class="form-control" required>*@
                                                    </div>

                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-12">Mail</label>
                                                    <div class="col-md-12">
                                                        @Html.TextBoxFor(model => model.thongtinnguoidung.Gmail, "", new { @type = "email", @class = "form-control mailtaikhoanedit", @placeholder = "mail", required = "required" })

                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-12"> Quê quán </label>
                                                    <div class="col-md-12">
                                                        @Html.TextBoxFor(model => model.thongtinnguoidung.Quequan, "", new { @type = "text", @placeholder = "quê quán", @class = "form-control quequantaikhoanedit", @required = "required" })
