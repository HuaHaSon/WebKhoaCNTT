                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane fade active in" id="taikhoan1">

                        <div style="margin-bottom: 15px">
                            <button class="btn btn-success" data-toggle="modal" data-target="#themtaikhoan"> Thêm tài khoản </button>
                        </div>

                        <!-- Modal -->

                        <div id="themtaikhoan" class="modal fade" role="dialog">
                            <div class="modal-dialog  modal-lg">

                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title">Thêm tài khoản</h4>
                                    </div>

                                    <form class="form-horizontal" data-toggle="validator">
                                        <div class="modal-body">

                                            <div class="white-box col-lg-6">
                                                <h3 class="box-title m-b-0">Thông tin người dùng</h3>
                                                <div class="form-group">
                                                    <label class="col-md-12"> Họ tên </label>
                                                    <div class="col-md-12">
                                                        @Html.TextBoxFor(model => model.thongtinnguoidung.Hoten, "", new { @type = "text", @class = "form-control hotentaikhoanadd", @placeholder = "họ tên", @required = "required" })
                                                        @*<input type="text" class="form-control" placeholder="Họ tên" required />*@
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-12"> Ngày sinh </label>
                                                    <div class="col-md-12">
                                                        <div class="input-group">
                                                            @Html.TextBoxFor(model => model.thongtinnguoidung.Namsinh, "", new { @type = "text", @class = "form-control ngaysinhtaikhoanadd", @id = "datepicker-autoclose", @placeholder = "mm/dd/yyyy", @required = "required" })
                                                            @*<input type="text" class="form-control" id="datepicker-autoclose" placeholder="mm/dd/yyyy" required />*@
                                                            <span class="input-group-addon"><i class="icon-calender"></i></span>
                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-12"> Số điện thoại</label>
                                                    <div class="col-md-12">
                                                        @Html.TextBoxFor(model => model.thongtinnguoidung.Sodienthoai, "", new { @type = "text", @placeholder = "", @data_mask = "+84 99 999 9999", @class = "form-control sdttaikhoanadd", @required = "required" })
                                                        @*<input type="text" placeholder="" data-mask="+84 99 999 9999" class="form-control" required>*@
                                                    </div>

                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-12">Mail</label>
                                                    <div class="col-md-12">
                                                        @Html.TextBoxFor(model => model.thongtinnguoidung.Gmail, "", new { @type = "email", @class = "form-control mailtaikhoanadd", @placeholder = "mail", required = "required" })

                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-12"> Quê quán </label>
                                                    <div class="col-md-12">
                                                        @Html.TextBoxFor(model => model.thongtinnguoidung.Quequan, "", new { @type = "text", @placeholder = "quê quán", @class = "form-control quequantaikhoanadd", @required = "required" })
                                                        @*<input type="text" placeholder="quê quán" class="form-control" required>*@
                                                    </div>

                                                </div>

                                            </div>

                                            <div class="white-box col-lg-6 m-b-0">
                                                <h3 class="box-title m-b-0">Thông tin tài khoản</h3>
                                                <div class="form-group">
                                                    <label class="col-md-12"> Tên tài khoản </label>
                                                    <div class="col-md-12">

                                                        @Html.TextBoxFor(model => model.taikhoan.Tentaikhoan, "", new { @type = "text", @class = "form-control tentaikhoanadd", @placeholder = "Tên tài khoản", required = "required", @data_error = "Bạn chưa nhập tên tài khoản" })

                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label class="col-md-12">Mật khẩu</label>
                                                    <div class="col-md-12">
                                                        @Html.TextBoxFor(model => model.taikhoan.Matkhau, "", new { @class = "form-control matkhautaikhoanadd", @type = "password", @placeholder = "******", required = "required" })

                                                    </div>
                                                </div>


                                                <div class="form-group">
                                                    <label class="col-sm-12">Chức vụ</label>
                                                    <div class="col-sm-12">

                                                        @Html.DropDownListFor(Model => Model.thongtinnguoidung.Machucvu, new SelectList(ViewBag.Ichucvu, "Machucvu", "Tenchucvu"), new { @id = "taikhoanadd_machucvu", @class = "form-control machucvutaikhoanadd", required = "required" })

                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-sm-12">Flag</label>
                                                    <div class="col-sm-12">
                                                        @Html.DropDownListFor(Model => Model.taikhoan.Flag, new SelectList(ViewBag.Itrangthai, "id", "flag", "True"), new { @id = "taikhoanadd_flag", @class = "form-control flagtaikhoanadd" })
                                                    </div>
                                                </div>
                                            </div>



                                        </div>


                                        <div class="modal-footer">

                                            <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                                            <button type="button" id="btnthemtaikhoan" class="btn btn-success waves-effect waves-light m-r-30">Thêm</button>

                                        </div>
                                    </form>


                                </div>

                            </div>
                        </div>

                        <div id="suataikhoan" class="modal fade" role="dialog">
                            <div class="modal-dialog modal-lg">

                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title">Sửa tài khoản</h4>
                                    </div>
                                    @using (Html.BeginForm("Suataikhoan", "Thongtinnguoidung", FormMethod.Post, new { @class = "form-horizontal", @data_toggle = "validator" }))
                                    {
                                        <div class="modal-body">

                                            <div class="white-box col-lg-6">
                                                <h3 class="box-title m-b-0">Thông tin người dùng</h3>
                                                <div class="form-group">
                                                    <label class="col-md-12"> Họ tên </label>
                                                    <div class="col-md-12">
                                                        @Html.TextBoxFor(model => model.thongtinnguoidung.Hoten, "", new { @type = "text", @class = "form-control hotentaikhoanedit", @placeholder = "họ tên", @required = "required" })
