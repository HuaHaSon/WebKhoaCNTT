                                                    </div>

                                                </div>
                                            </div>

                                            <div class="white-box col-lg-6" style="height:405px">
                                                <h3 class="box-title m-b-0">Thông tin tài khoản</h3>
                                                <div class="form-group">
                                                    <label class="col-md-12"> Tên tài khoản </label>
                                                    <div class="col-md-12">
                                                        @if (ViewBag.check == "true")
                                                        {
                                                            @Html.ValidationSummary(false, "", new { @class = "text-danger text-center" });

                                                        }



                                                        @Html.TextBoxFor(model => model.taikhoan.Tentaikhoan, "", new { @type = "text", @class = "form-control tentaikhoanedit", @placeholder = "Tên tài khoản", required = "required", @readonly = "readonly" })

                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-sm-12">Chức vụ</label>
                                                    <div class="col-sm-12 id_100">

                                                        @Html.DropDownListFor(Model => Model.thongtinnguoidung.Machucvu, new SelectList(ViewBag.Ichucvu, "Machucvu", "Tenchucvu"), new { @id = "taikhoanedit_machucvu", @class = "form-control", required = "required" })

                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-12">Mật khẩu</label>
                                                    <div class="col-md-12">
                                                        @Html.TextBoxFor(model => model.taikhoan.Matkhau, "", new { @class = "form-control matkhautaikhoanedit", @type = "text", @placeholder = "******", required = "required" })

                                                    </div>
                                                </div>

                                            </div>


                                        </div>

                                        <div class="modal-footer">

                                            <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                                            <button type="button" id="btnsuataikhoan" class="btn btn-success waves-effect waves-light m-r-30">Lưu</button>

                                        </div>
                                    }


                                </div>

                            </div>
                        </div>

                        <!-- end Modal -->

                        <div class="panel">
                            Ẩn cột:  <a class="toggle-vis" id="ttaikhoan" data-column="1">Mật khẩu</a> / <a class="toggle-vis" id="ttaikhoan" data-column="2">Trạng thái</a> / <a class="toggle-vis" id="ttaikhoan" data-column="3">Thời gian đăng ký</a> / <a class="toggle-vis" id="ttaikhoan" data-column="4">Flag</a> / <a class="toggle-vis" id="ttaikhoan" data-column="5">Chức năng</a>
                        </div>
                        <div class="table-responsive">
                            <table id="taikhoanTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Tên tài khoản</th>
                                        @*<th>Chức vụ</th>*@
                                        <th>Mật khẩu</th>
                                        <th>Trạng thái</th>
                                        <th>Thời gian đăng ký</th>
                                        @*<th>Mail</th>*@
                                        <th>Flag</th>
                                        <th>  </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.listtaikhoan)
                                    {
                                        <tr>
                                            <td class="tentaikhoan">@item.Tentaikhoan</td>
                                            @*<td class="machucvutaikhoan">@item.Machucvu</td>*@
                                            <td class="matkhautaikhoan">@item.Matkhau</td>
                                            <td class="trangthaitaikhoan">


                                                @if (item.Trangthaihd == "Offline")
                                                {
                                                    <span class="badge badge-danger"> Offline </span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger"> Online </span>
                                                }


                                            </td>

                                            <td class="tgdangkitaikhoan">@item.TGdangki</td>

                                            @*<td class="mailtaikhoan">@item.Mail</td>*@
                                            <td class="flagtaikhoan">
                                                <a class="btntaikhoanflag" data-tentaikhoan="@item.Tentaikhoan" hres="#">
                                                    @if (item.Flag == false)
                                                    {
                                                        <span class="text-danger"> Khóa </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-info"> Không khóa</span>
                                                    }

                                                </a>
                                            </td>
                                            <td>
                                                <button class="btnloadtaikhoan" type="button" data-toggle="modal" data-target="#suataikhoan" style="background-color:transparent;border:none">
                                                    <i class="fa fa-pencil-square-o" style="color:red"> </i>
                                                </button>
                                                <button type="button" style="background-color:transparent;border:none">
                                                    <i class="fa fa-info" style="color:blue"> </i>
                                                </button>

                                            </td>

                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>

                    </div>

                    <div role="tabpanel" class="tab-pane fade" id="chucvu1">
                        <div style="margin-bottom: 15px">
                            <button class="btn btn-success" data-toggle="modal" data-target="#themchucvu"> Thêm chức vụ </button>
                        </div>
                        <div class="panel">
                            Ẩn cột: @*<a class="toggle-vis" data-column="0">Tên tài khoản</a> /*@ <a class="toggle-vis" id="tchucvu" data-column="1">Tên chức vụ</a> / <a class="toggle-vis" id="tchucvu" data-column="2">Flag</a> / <a class="toggle-vis" id="tchucvu" data-column="3">Chức năng</a>
                        </div>

                        <!-- modal -->
                        <div id="themchucvu" class="modal fade" role="dialog">
                            <div class="modal-dialog modal-lg">

                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title">Thêm chức vụ</h4>
                                    </div>
                                    <form class="form-horizontal" data-toggle="validator">
                                        <div class="modal-body">

                                            <div class=" white-box m-b-0 p-t-0 p-b-0 ">
                                                <h3 class="box-title m-b-0">Thông tin chức vụ</h3>
                                                <div class="form-group">
                                                    <label class="col-md-12"> Mã chức vụ </label>
                                                    <div class="col-md-12">

                                                        @Html.TextBoxFor(model => model.chucvu.Machucvu, "", new { @type = "text", @class = "form-control machucvuadd", @placeholder = "Mã quyền", required = "required" })
                                                        @*<input type="text"class="form-control machucvuadd" placeholder="mã chức vụ" required/>*@
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-12">Tên chức vụ</label>
                                                    <div class="col-md-12">
                                                        @Html.TextBoxFor(model => model.chucvu.Tenchucvu, "", new { @class = "form-control tenchucvuadd", @type = "text", @placeholder = "Tên quyền", required = "required" })
                                                        @*<input type="text" class="form-control tenchucvuadd" placeholder="tên chức vụ" required />*@
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label class="col-sm-12">Flag</label>
                                                    <div class="col-sm-12">
                                                        @Html.DropDownListFor(Model => Model.chucvu.Flag, new SelectList(ViewBag.Itrangthai, "id", "flag", "True"), new { @id = "chucvuadd_flag", @class = "form-control flagchucvuadd" })

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="white-box m-b-0 p-t-0 p-b-0">
                                                <h3 class="box-title m-b-50">Phân quyền</h3>
