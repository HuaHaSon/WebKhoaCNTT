@model PagedList.IPagedList<Model.EF.NoidungDT>
@using PagedList.Mvc;
@{
    ViewBag.Title = "TDDH";
    Layout = "~/Areas/Guest/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="/Assets/Guest/css/khungbentrai.css" rel="stylesheet" id="theme-stylesheet">
</head>
<body>
    <div id="content">

        <div class="container">

            <div class="col-sm-12">
                <ul class="breadcrumb">

                    <li>
                        @Html.ActionLink("Trang chủ", "Index", "Home")
                    </li>
                    <li>Đào tạo</li>
                    <li>@ViewBag.TenLoai</li>
                </ul>
            </div>

            <!-- *** LEFT COLUMN ***
            _________________________________________________________ -->

            <div class="col-sm-9" id="blog-listing">
                @foreach (var item in Model)
                {
                    <div class="post">
                        <h4>
                            @Html.ActionLink(item.Tieude, "CTDT", "DaoTao", new { manddt = item.MaNDDT ,tenloai= @ViewBag.TenLoai ,madt=@ViewBag.MaDT}, null)
                        </h4>
                        <p>@Html.Raw(item.NoidungDT1.Substring(0, Math.Min(item.NoidungDT1.Length, 550)))....</p>
                        <p class="read-more btn btn-primary"> @Html.ActionLink("Xem thêm", "CTDT", "DaoTao", new { manddt = item.MaNDDT, tenloai = @ViewBag.TenLoai, madt = @ViewBag.MaDT }, new { style = "color: White" }) </p>
                    </div>
                }



                <div class="col-lg-12">
                    @Html.PagedListPager(Model, page => Url.Action("TDDH", new { page ,maloaidt=ViewBag.MaDT}))
                </div>
            </div>
            <!-- /.col-md-9 -->
            <!-- *** LEFT COLUMN END *** -->
            <div class="col-md-3">
                <!-- *** BLOG MENU ***
                _________________________________________________________ -->
                <div class="panel panel-default sidebar-menu">

                    <div class="panel-heading">
                        <h3 class="panel-title">Đào tạo</h3>
                    </div>

                    <div class="panel-body">

                        <ul class="nav nav-pills nav-stacked">
                            @foreach (var item in ViewBag.List)
                            {
                                <li> @Html.ActionLink((string)item.Tenloai, "TDDH", "DaoTao", new { maloaidt = item.MaloaiDT, tenloai = item.Tenloai }, null)</li>
                            }
                           
                        </ul>
                    </div>

                </div>
                <!-- /.col-md-3 -->
                <!-- *** BLOG MENU END *** -->
                @*<div class="banner">
                        <img src="../../../cntt_media/khoa-cntt.jpg" alt="Khoa cntt" class="img-responsive">

                    </div>*@
            </div>


        </div>
        <!-- /.container -->
        <!-- /#content -->
    </div>

</body>




