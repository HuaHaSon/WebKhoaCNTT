@model PagedList.IPagedList<Model.EF.Baidang>
@using PagedList.Mvc;
@{
    ViewBag.Title = "TB";
    Layout = "~/Areas/Guest/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="/Assets/Guest/css/khungbentrai.css" rel="stylesheet" id="theme-stylesheet">
</head>
<body>
    <div id="content">

        <div class="container">

            <div class="col-sm-12">
                <ul class="breadcrumb">

                    <li>
                        @Html.ActionLink("Trang chủ", "Index", "Home")
                    </li>
                    <li>
                        Thông báo
                    </li>


                </ul>
            </div>

            <div class="col-sm-12" id="blog-listing">
                @foreach (var item in Model)
                {
                    <div class="post" >
                        <h3>@Html.ActionLink(item.Tieude, "ThongBao1", "ThongBao",new { mabaidang=item.Mabaidang},null)</h3>
                            <p style="overflow:hidden;display:-webkit-box;-webkit-line-clamp:1;-webkit-box-orient:vertical">
                                @Html.Raw(item.Noidung.Substring(0, Math.Min(item.Noidung.Length, 550)))....
                            </p>
                                               
                        <p class="read-more btn btn-primary"> @Html.ActionLink("Xem thêm", "ThongBao1", "ThongBao", new { mabaidang=item.Mabaidang},new { style = "color: White"}) </p>
                    </div>
                }
            </div>
        </div>       
        <div class="col-lg-12">
            @Html.PagedListPager(Model, page => Url.Action("TB", new { page }))
        </div>


    </div>

</body>

<script>


</script>